@model Produkt

<div id="@("produkt" + Model.Id)" class="col-12">
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd><input type="text" id="@("produkt" + Model.Id + "Price")"  value="@Model.Name" /></dd>
        <dt>Price</dt>
        <dd><input type="text" id="@("produkt" + Model.Id + "Name")"  value="@Model.Price" /></dd>
        <dt>
            <button class="btn btn-success" onclick="LinkEdit('@Url.Action("Edit", "Produkt")' , '@("produkt" + Model.Id)' , '@Model.Id')">
                Save
            </button>
        </dt>
        <dd>
            <button class="btn btn-secondary" onclick="LinkUpdate('@Url.Action("Produkt", "Produkt", new { id = Model.Id })' , '@("produkt" + Model.Id)')">
                Back
            </button>
        </dd>
    </dl>
</div>
